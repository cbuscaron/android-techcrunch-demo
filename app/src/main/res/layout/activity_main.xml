<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
  <LinearLayout
      android:id="@+id/main_linearlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/chip_id"
        android:text="@string/chip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        />

    <Button
        android:id="@+id/revoke_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_new_device"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        />

    <TextView
        android:id="@+id/accel_x"
        android:text="@string/accel_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/accel_y"
        android:text="@string/accel_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/accel_z"
        android:text="@string/accel_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        />

    <TextView
        android:id="@+id/vin"
        android:text="@string/vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/rpm"
        android:text="@string/rpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/battery_voltage"
        android:text="@string/battery_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

  </LinearLayout>
</ScrollView>
